# RESTO360 Environment Configuration
# Copy this file to .env and update the values

# Django settings
SECRET_KEY=change-me-in-production-use-a-long-random-string
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=postgres://user:pass@localhost:5432/resto360

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# CORS (comma-separated list of allowed origins for production)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# Sentry (production only)
# SENTRY_DSN=https://your-sentry-dsn

# BetterStack Logs
# BETTERSTACK_SOURCE_TOKEN=your-source-token

# Flutterwave (Card Payments)
# FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-xxx
# FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-xxx
# FLUTTERWAVE_WEBHOOK_SECRET=your-webhook-secret

# Paystack (Card Payments)
# PAYSTACK_SECRET_KEY=sk_test_xxx
# PAYSTACK_PUBLIC_KEY=pk_test_xxx

# CinetPay (Card Payments - Francophone Africa)
# CINETPAY_API_KEY=your-api-key
# CINETPAY_SITE_ID=your-site-id
# CINETPAY_SECRET_KEY=your-secret-key

